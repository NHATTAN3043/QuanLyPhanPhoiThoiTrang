
<div class="container">
    <div class="row justify-content-center">
         <div class="col-md-12">
            <h3 >Thông tin chi tiết sản phẩm</h3>
            <hr />
            <div class="row">
                <div class="col-md-4">                  
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Tên sản phẩm</label>
                            <input class="form-control" value="{{chiTietSanPham.MaSanPham_SanPham.TenSanPham}}" readonly/>
                            <span class="text-danger"></span>
                        </div>
                    <div class="form-group">
                            <label class="control-label">Size</label>
                            <input class="form-control" value="{{chiTietSanPham.MaSize_Size.TenSize}}" readonly/>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Màu</label>
                            <input class="form-control" value="{{chiTietSanPham.MaMau_Mau.TenMau}}" readonly/>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Loại sản phẩm</label>
                            <input class="form-control" value="{{chiTietSanPham.MaLoaiSanPham_LoaiSanPham.TenLoaiSanPham}}" readonly/>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Đối tượng khách hàng</label>
                            <input class="form-control" value="{{chiTietSanPham.MaDoiTuong_DoiTuong.TenDoiTuong}}" readonly/>
                            <span class="text-danger"></span>
                        </div>
                    {{!-- input soLuong hidden --}}
                        <input class="form-control" name="SoLuong" type="hidden"/>
                        
                        <div class="form-group">
                            <label class="control-label">Hình ảnh</label>
                            <input type="file" name="HinhAnh" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nơi sản xuất</label>
                            <input class="form-control" name="NSX" value="{{chiTietSanPham.NSX}}" readonly/>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Chất liệu</label>
                            <input class="form-control" name="ChatLieu" value="{{chiTietSanPham.ChatLieu}}" readonly />
                            <span for="ChatLieu" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                            <label class="control-label">Giá tiền(vnd)</label>
                            <input type="number" name="GiaTien" id="GiaTien" step="1000" min="0" value="{{chiTietSanPham.GiaTien}}" readonly/>
                            <span for="GiaTien" class="text-danger"></span>
                        </div>                                   
                </div>
            </div>
            <div style="margin: 0px 10px;">
                <a href="/ctsp/index" class="btn btn-secondary">quay lại</a>
            </div>
        </div>
    </div>
</div>
