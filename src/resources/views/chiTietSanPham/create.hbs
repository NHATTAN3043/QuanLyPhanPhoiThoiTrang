
<div class="container">
    <div class="row justify-content-center">
         <div class="col-md-12">
            <h3 class="text-center">Tạo mới chi tiết sản phẩm</h3>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="POST" action="/ctsp/create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Tên sản phẩm</label>
                            <select class ="custom-select" name="MaSanPham" required>
                                <option value="">Chọn sản phẩm</option>
                                {{#each sanphams}}
                                <option value="{{this.MaSanPham}}">{{this.TenSanPham}}</option>
                                {{else}}
                                <option value="">Không có sản phẩm</option>
                                {{/each}}
                            </select>
                        </div>
                    <div class="form-group">
                            <label class="control-label">Size</label>
                            <select class ="custom-select" name="MaSize" required>
                                <option value="">Chọn size</option>
                                {{#each sizes}}
                                <option value="{{this.MaSize}}">{{this.TenSize}}</option>
                                {{else}}
                                <option value="">Không có size</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Màu</label>
                            <select class ="custom-select" name="MaMau" required>
                                <option value="">Chọn màu</option>
                                {{#each maus}}
                                <option value="{{this.MaMau}}">{{this.TenMau}}</option>
                                {{else}}
                                <option value="">Không có màu</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Loại sản phẩm</label>
                            <select class ="custom-select" name="MaLoaiSanPham" required>
                                <option value="">Chọn loại</option>
                                {{#each loaisanphams}}
                                <option value="{{this.MaLoaiSanPham}}">{{this.TenLoaiSanPham}}</option>
                                {{else}}
                                <option value="">Không có loại </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Đối tượng khách hàng</label>
                            <select class ="custom-select" name="MaDoiTuong" required>
                                <option value="">Chọn đối tượng</option>
                                {{#each doituongs}}
                                <option value="{{this.MaDoiTuong}}">{{this.TenDoiTuong}}</option>
                                {{else}}
                                <option value="">Không có đối tượng </option>
                                {{/each}}
                            </select>
                        </div>
                    {{!-- input soLuong hidden --}}
                        <input class="form-control" name="SoLuong" type="hidden"/>
                        
                        <div class="form-group">
                            <label class="control-label">Hình ảnh</label>
                            <input type="file" name="HinhAnh" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nơi sản xuất</label>
                            <input class="form-control" name="NSX" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Chất liệu</label>
                            <input class="form-control" name="ChatLieu" />
                            <span for="ChatLieu" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                            <label class="control-label">Giá tiền(vnd)</label>
                            <input type="number" name="GiaTien" id="GiaTien" step="1000" min="0" />
                            <span for="GiaTien" class="text-danger"></span>
                        </div>
                        <div class="form-group">                
                            <button type="submit" class="btn btn-outline-success">Tạo mới</button>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a href="/ctsp/index">quay lại</a>
            </div>
        </div>
    </div>
</div>
